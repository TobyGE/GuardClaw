{
  "name": "guardclaw",
  "version": "0.1.0",
  "description": "AI Agent Safety Monitor with LLM-based Command Safeguard",
  "main": "server/index.js",
  "type": "module",
  "bin": {
    "guardclaw": "./bin/guardclaw.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && ./node_modules/.bin/vite",
    "build": "cd client && ./node_modules/.bin/vite build",
    "start": "node server/index.js",
    "test": "echo \"Tests coming soon\" && exit 0"
  },
  "keywords": [
    "openclaw",
    "agent",
    "monitoring",
    "safety",
    "ai",
    "llm"
  ],
  "author": "YG",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/TobyGE/GuardClaw.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=18"
  }
}
